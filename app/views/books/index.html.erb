<div class= "flash">
<%= flash[:notice] %></div>

<h1>Books</h1>
<table>
<thead>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th></th>
  </tr>
</thead>

<tbody>

  <% @books.each do |book| %>
  <tr>


    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Show' , book_path(book.id) %></td>
    <td><%= link_to 'Edit' , edit_book_path(book.id) %></td>
    <td><%= link_to 'Destroy' , book_path(book.id) , method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
  
  <% end %>
</tbody>
</table>

<div class="new">
  <ol>
  <li><h2>New book</h2></li>
  
  <% if @book.errors.any? %>
    <div class="box-title">
    <p><%= @book.errors.count %>errors prohibited this book from being saved:</p></div>
    <div class="box">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    
  </div>
  <% end %>


   <%= form_with model: @book do |f| %>


  <li><h4>Title</h4></li>
  <li><%= f.text_field :title %></li>

  <li><h4>Body</h4></li>
  <li><%= f.text_area :body %></li>

  <br><%=f.submit ' Create Book ' %></br>

  <% end %>
  </ol>
</div>


