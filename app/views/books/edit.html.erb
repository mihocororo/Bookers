<div class= "flash">
<%= flash[:notice] %></div>

<header>
    <h1>Editing Book</h1>
</header>

<% if @book.errors.any? %>
    <div class="box-title">
    <p><%= @book.errors.count %>errors prohibited this book from being saved:</p></div>
    <div class="box">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    </div>
    <% end %>

<div class="edit">
    <%= form_with model: @book , url: book_path(@book.id), method: :patch do |f| %>


    <h4>Title</h4>
    <%= f.text_field :title %>



    <h4>Body</h4>
    <%= f.text_area :body %>
    <ol>
    <li><%= f.submit 'Update Book' %></li>

    <li><%= link_to 'Show ' , book_path(@book.id) %>|
        <%= link_to 'Back' , '/books' %></li>

    <% end %>
    </ol>


    </div>